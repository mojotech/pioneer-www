navy = rgb(30, 86, 111)
global-reset()

.page-container
  font-family: gotham

.meet-pioneer
  background: rgb(227, 196, 44)
  height: 650px

.what
  background: rgb(37, 89, 109)
  height: 800px

.top-nav
  z-index: 2
  position: fixed
  width: 100%
  margin: 0
  text-align: center
  line-height: 60px
  vertical-align: middle
  background: rgba(0, 0, 0, .02)
  ul
    display: inline
    margin: 0
    padding: 0
    list-style-type: none
    li
      display: inline
      padding: 20px
      font-size: 15px
      a
        text-decoration: none
        &:link
          color: white
        &:visited
          color: white
        &:hover
          text-decoration: underline
      a.active
        color: navy

  .logo
    position: absolute
    left:0
/* Header scroll*/
.headroom
  transition: transform 200ms linear

.headroom--pinned
  transform: translateY(0%)

.headroom--unpinned
  transform: translateY(-100%)


.headline
  padding: 100px 0px 15px 0px
  line-height: 60px
  font-size: 55px
  font-weight: 400
  letter-spacing: 7px
  color: navy

.subheadline
  padding: 15px
  line-height: 30px
  font-size: 25px
  color navy

h6
  font-size: 15px

p
  text-align: center
  max-width: 850px
  margin: 0 auto

pre
  margin: 9px 0
  text-align: center
  font-family: monospace

.browser-top
  background: rgb(235,235,235)
  width: 100%
  height: 30px
  border-top-left-radius: 10px
  border-top-right-radius: 10px
  line-height 30px
  ul
    display: inline
    margin: 0
    padding: 0
    list-style-type: none
    vertical-align: middle
    li
      display: inline
      padding: 7px
      .button
        color: #666666
        border: 1px solid #b8b8b8
        line-height: 18px
        width: 15px
        height: 15px
        border-radius: 10px

.panes > div
  overflow: hidden
  box-sizing: border-box

.container
  position: relative
  width:      1000px
  margin:     20px auto
  min-height: 700px
  background: #474747
  box-shadow: 6px 12px 10px rgba(15,15,15, 0.4)
  border-top-left-radius: 10px
  border-top-right-radius: 10px
  pre
    text-align: left

.line
  font-size: 12px
  padding: 2px 0px 2px 0px
  line-height: 0px
  color: #f8f8f2
  cursor: pointer

  transition: all 200ms

.line.hovered
  background-color: rgba(0, 0, 0, 0.1)

.line.active
  background-color: rgba(0, 0, 0, 0.29)


.line.hidden
  display: none

.pre
  margin:0
  padding: 0.6em 0

.top
  height:  240px

.bottom
  height:50%
  display: block

.top
  float: left
  width: 33.3%

.left-arrow
  position: absolute
  top: 500px
  left: 30px

.right-arrow
  position: absolute
  top: 300px
  right: 50px

#movie-theatre
  position: relative
  left:50%
  top: 50%
  margin-left:-206px
  margin-top: -138px

.bottom.left
  width:100%
  height: 485px

/* Syntax Highlighting */
.function
  color: #66D9EF

.keyword
  color: #F92672

.variable
  color: #A6E22E

.string
  color: #E6DB74

.constant
  color: #AE81FF

.what-block
  position: relative
  top: 400px
  padding: 50px
  width: 850px
  margin: 0 auto
  .headline
    color: rgb(174, 204, 105)
    padding: 20px

  .description
    color: white
    margin-left: 100px
    text-align: left
    line-height: 25px
    font-size: 15px

.blue-wagon
  float: left

  display: inline

.installing
  background-color: rgb(229, 229, 229)
  padding: 30px
  h3
    margin: 0 auto
    font-size: 30px
    max-width: 850px
    line-height: 50px

  pre
    margin: 0 auto
    text-align: left
    max-width: 850px
    line-height: 50px
    color: rgb(182, 182, 182)
    font-size: 30px
    letter-spacing: 6px

.pieces
  background-color: rgb(58, 150, 224)
  padding: 30px

  div
    max-width: 950px
    margin: 0 auto

    h3
      color: rgb(143, 202, 162)
      font-size: 30px
      padding: 20px 0px 20px 0px

    p
      color: white
      text-align: left
      margin: 0
      max-width: 850px
      line-height: 30px
      font-size: 20px


.components
  background-color: white
  padding: 50px
  ul
    max-width: 850px
    margin: 0 auto

  h6
    font-size: 30px
    line-height: 60px

  p
    text-align: left
    line-height: 25px

.getting-started
  background-color: rgb(226, 195, 44)

  p
    padding: 50px
    margin: 0 auto
    text-align: left
    max-width: 950px
    color: navy
    font-size: 40px
