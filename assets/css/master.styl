global-reset()

@import "_variables"
@import "_ui"
@import "_fonts"
@import "_header"
@import "_installing"
@import "_pieces"
@import "_components"
@import "_viewports"
@import "_what"

*
  box-sizing: border-box

h1, h2, h3, h4, h5, h6
  color: #616161

.left
  float: left

.cl
  clear: both

.page-container
  font-family: "GothamBook"
  -webkit-font-smoothing: antialiased

.meet-pioneer
  background: $yellow
  padding-bottom: 10px
  position: relative

.half-fill
  width: 100%
  position: absolute
  height: 44%
  background: $navy
  bottom: 0


.half-fill, .what
  &:after
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: url('../img/wagons.png')
    background-size: 142px
    opacity: 0.05
    background-position: 0 100%

.headline
  padding: 100px 0px 15px 0px
  line-height: 60px
  font-size: 55px
  font-weight: 400
  letter-spacing: 7px
  color: $navy

.subheadline
  line-height: 30px
  font-size: 18px
  color $navy
  padding-top: 15px
  padding-bottom: 15px

h6
  font-size: 15px

p
  text-align: center
  max-width: 850px
  margin: 0 auto

pre
  margin: 9px 0
  text-align: center
  font-family: monospace

.browser-top
  background: rgb(235,235,235)
  width: 100%
  height: 30px
  border-top-left-radius: 10px
  border-top-right-radius: 10px
  line-height 30px
  position: absolute
  top: -30px
  ul
    display: inline
    margin: 0
    padding: 0
    list-style-type: none
    vertical-align: middle
    position: relative
    top: 3px
    left: 4px
    li
      display: inline-block
      background: #D8D8D8
      border-radius: 50%
      height: 15px
      width: 15px
      margin: 0 5px

.panes > div
  overflow: hidden
  box-sizing: border-box

.container
  position: relative
  width:      1000px
  margin:     30px auto 10px
  min-height: 700px
  background: #474747
  box-shadow: 4px -16px 14px rgba(15,15,15,0.4)
  pre
    text-align: left

.line
  font-size: 12px
  padding: 2px 0px 2px 0px
  line-height: 0px
  color: #f8f8f2
  cursor: pointer

  transition: all 200ms

.line.hovered
  background-color: rgba(0, 0, 0, 0.1)

.line.active
  background-color: rgba(0, 0, 0, 0.29)


.line.hidden
  display: none

.pre
  margin:0
  padding: 0.6em 0

.top
  height:  240px

.bottom
  height:50%
  display: block

.top
  float: left
  width: 33.3%

#movie-theatre
  position: relative
  left:50%
  top: 50%
  margin-left:-206px
  margin-top: -138px

.bottom.left
  width:100%
  height: 485px
  border-top: dashed 1px #3A3A3A

/* Syntax Highlighting */
.function
  color: #66D9EF

.keyword
  color: #F92672

.variable
  color: #A6E22E

.string
  color: #E6DB74

.constant
  color: #AE81FF

.getting-started
  background-color: rgb(226, 195, 44)

  p
    padding: 50px
    margin: 0 auto
    text-align: left
    max-width: 950px
    color: navy
    font-size: 40px
